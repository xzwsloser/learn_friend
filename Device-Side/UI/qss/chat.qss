QPushButton#backButton {
    background-color: #f0f0f0;
    border: 1px solid #dcdcdc;
    border-radius: 4px;
    padding: 4px 8px;
    font-family: "Microsoft YaHei";
    font-size: 25px;
    font-weight: bold;
    color: #333;
}

QLabel#timeLabel {
    color: #333;
    font-family: "Microsoft YaHei";
    font-size: 50px;
}

QScrollArea#chatArea {
    background-color: #fff;
    border: 1px solid #e0e0e0;
    border-radius: 20px;
}

QScrollArea#chatArea > QWidget#qt_scrollarea_viewport {
    background-color: #f9f9f9;
    border: none;
}

QPlainTextEdit#inputEdit {
    background-color: #fff;
    border: 1px solid #dcdcdc;
    border-radius: 20px;
    font-family: "Microsoft YaHei";
    font-size: 40px;
    color: #333;
    padding: 6px;
}

QPlainTextEdit#inputEdit:focus {
    border-color: #66afe9;
    outline: none;
}

